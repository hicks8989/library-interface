extends layout.pug

block content
	h1 Patron: Return Book
	p
		strong Book Title: 
		| #{book.title}
	p
		strong Loaned By: 
		| #{patron.first_name} #{patron.last_name}
	p
		strong Loaned On: 
		| #{loan.loaned_on}
	p
		strong Return By: 
		| #{loan.return_by}
	form(method="post", action="/books/return/" + book.id)
		p
			label(for='returned_on') Returned on:
			input#returned_on(type='text', value=returned_on, name='returned_on')
		p
			input(type='submit', value='Return Book')
