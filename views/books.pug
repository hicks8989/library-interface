extends layout.pug

block content
	h1 #{filter} Books
	p
		a.button(href='/books/new') Create New Book
	p
		| Filters 
		a(href='/books?filter=all') All
		|  
		a(href='/books?filter=overdue') Overdue
		|  
		a(href='/books?filter=checked_out') Checked Out
	table
		thead
			tr
				th Title
				th Author
				th Genre
				th Year Released
		each book in books
			tr
				td
					a(href='books/details/' + book.id) #{book.title}
				td #{book.author}
				td #{book.genre}
				td #{book.first_published}
